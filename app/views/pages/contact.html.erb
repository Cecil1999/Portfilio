<% if flash['alert'] %>
<div class="">
    <%= flash['alert'] %>
</div>
<% end %>
<div class="flex flex-col h-1/3 w-full">
    <div class="bg-light-200 dark:bg-dark-900 dark:border dark:border-dark-700 shadow-md dark:shadow-dark-800 w-full h-full rounded-xl p-2 text-center">
        <h2 class="text-2xl font-bold text-light-800 dark:text-dark-100">Contact Form</h2>
        <%= form_with url: email_path do |form| %>
        <div class="flex flex-wrap p-2 text-left">
            <div class="flex-1">
                <div class="m-2">
                    <%= form.label :name, class: "dark:text-dark-200 text-light-800 font-bold text-lg mb-1" %>
                    <%= form.text_field :name, class:"p-2 dark:bg-dark-200 bg-light-100 border rounded-md w-full" %>
                </div>
                <div class="m-2">
                    <%= form.label :email, class: "dark:text-dark-200 text-light-800 font-bold text-lg mb-1" %>
                    <%= form.text_field :email, class:"p-2 dark:bg-dark-200 bg-light-100 border rounded-md w-full" %>
                </div>
            </div>
            <div class="flex-1">
                <div class="p-2">
                    <%= form.label :message, class: "dark:text-dark-200 text-light-800 font-bold text-lg mb-1" %>
                    <%= form.text_area :message, class: "p-2 dark:bg-dark-200 bg-light-100 border rounded-lg w-full min-h-64" %>
                </div>
            </div>
        </div>
        <div class="p-2 text-left">
            <%= form.submit("Send", class: "bg-transparent hover:text-white hover:bg-light-500 dark:hover:text-dark-900 dark:hover:bg-dark-400 dark:text-dark-200 px-4 py-2 font-semibold border border-1 border-light-500 dark:border-dark-400 text-lg rounded-md") %>
        </div>
        <% end %>
    </div>
</div>