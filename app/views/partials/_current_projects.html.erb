<div class="flex w-full h-128 mt-2">
    <div class="flex-1">
        <div class="bg-light-200 dark:bg-dark-900 dark:border dark:border-dark-700 shadow-md dark:shadow-dark-800 w-full h-full rounded-xl p-2 text-center">
            <h2 class="text-2xl font-bold text-light-800 dark:text-dark-100">Current Projects</h2>
            <div class="flex p-2 flex-wrap gap-2">
                <% @projects.each do |project| %>
                <div class="flex flex-col justify-evenly border border-1 border-dark-600 h-fit text-left py-4 px-6 rounded-md mb-4 dark:bg-dark-800 ">
                    <span class="text-2xl text-light-800 dark:text-dark-100 font-bold"><%= project['project_name'] %></span>
                    <span class="text-sm  text-light-700 dark:text-dark-200"><%= project['project_type'] %></span>
                    <span class="text-lg  text-light-600 dark:text-dark-300">
                        <%= project['description'] %>
                    </span>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>